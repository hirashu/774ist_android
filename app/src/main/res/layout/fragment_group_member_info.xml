<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ui.MemberInfoFragment">

    <include
        android:id="@+id/group_tab"
        layout="@layout/group_tab" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/groupMemberInfoList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_black"
        android:layout_marginBottom="@dimen/bottom_navigation_view_height"
        android:padding="1dp"
        tools:listitem="@layout/group_member_item"
        tools:itemCount="2"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/group_tab"
        />

</androidx.constraintlayout.widget.ConstraintLayout>